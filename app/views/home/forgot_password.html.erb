<!-- Sign up -->
<section id="signup_Login" ng-controller="YomuLabsCtrl" ng-init="redirect_user_to_refer_your_friends();">
  <div class="container">
    <header id="signupheader">
      <p class="text-center">
        <a href="#">
          <img class="logo-head" alt="logo" src="assets/logo_icon_nobg.svg" height="50" width="50" />
        </a>
      </p>
      <p class="small text-center">Donâ€™t have a Yomu Lab account? <a href="/SignUp">Sign up here</a></p>
      <p class="small text-center">Enter your email address and we'll help you reset your password.</p>
    </header>

    <div class="col-sm-6 col-md-4 col-centered" ng-init="init();">
      
      <!-- Message Box -->
      <p id="message_box" class="{{message_type}} small" ng-show="message_box != ''">{{message_box}}</p>
      <!-- End - Message Box -->

      <form name="login_form" role="form" class="ng-pristine ng-valid-email ng-invalid ng-invalid-required" novalidate>
        <div class="form-group">
          <input type="text" placeholder="Email" class="form-control" ng-model="forgotPasswordForm.email" name="email" required="required" />
        </div>

        <div class="form-group">
          <button type="submit" ng-click="forgot_password(forgotPasswordForm.email);" class="btn btn-default btn-block submitbtn">
            Send Reset Link
          </button>
        </div>
      </form>

      <p class="small text-center">
        You will receive an e-mail with a link and instruction on how you can set a new password.
      </p>
      <%= render "partials/social_sign_footer" %>
    </div>
  </div>
</section>

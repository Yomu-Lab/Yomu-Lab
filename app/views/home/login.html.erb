<!-- Sign up -->
<section id="signup_Login" ng-controller="YomuLabsCtrl">
  <div class="container">
    <header id="signupheader">
      <p class="text-center">
        <a href="#">
          <img class="logo-head" alt="logo" src="assets/logo_icon_nobg.svg" height="50" width="50" />
        </a>
      </p>
      <p class="small text-center">Donâ€™t have a Yomu Lab account? <a href="/SignUp">Sign up here</a></p>
    </header>

    <div class="col-sm-6 col-md-4 col-centered" ng-init="init();">
      <p id="errorMsg" class="error small" ng-show="error_message != ''">{{error_message}}</p>
      <form ng-submit="submitLogin(loginForm)" role="form" class="ng-pristine ng-valid-email ng-invalid ng-invalid-required" novalidate>
        <div class="form-group">
          <input type="text" placeholder="Email" class="form-control" ng-model="loginForm.email" value="rpatil@mailinator.com" />
        </div>
        <div class="form-group">
          <input type="text" placeholder="Password" class="form-control" ng-model="loginForm.password" required="required" value="12345678"/>
        </div>
        <div class="form-group">
          <div class="clearfix"><span class="pull-left"><input type="checkbox" /> Remember me</span>
          <a href="#" class="pull-right">Forgot Password?</a>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default btn-block submitbtn">Log In</button>
        </div>
      </form>
      <footer id="signupfooter">
        <p class="text-center">Or Log In with</p>
        <p class="text-center">
          <!-- Facebook -->
          <a href="/users/auth/facebook" title="Share on Facebook" target="_blank" class="btn btn-facebook"><i class="fa fa-facebook"></i> Facebook</a>
          <!-- Google+ -->
          <a href="/users/auth/google_oauth2" title="Share on Google+" target="_blank" class="btn btn-googleplus"><i class="fa fa-google-plus"></i> Google+</a>
        </p>
        <p class="text-center notetext">We will never post to Twitter, Facebook, or<br />
          Google Plus without your permission.</p>
      </footer>
    </div>
  </div>
</section>
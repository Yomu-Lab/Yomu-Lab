<!-- Sign up -->
<section id="signup_Login" ng-controller="YomuLabsSignUpCtrl">
  <div class="container">
    <header id="signupheader">
      <p class="text-center">
        <a href="#"><img class="logo-head" alt="logo" src="assets/logo_icon_nobg.svg" height="50" width="50" /></a>
      </p>
      <p class="small text-center">Sign up for a free account in 30 seconds.. <br />
      Already have a Yomu Lab account? <a href="/Login">Log in here</a></p>
    </header>

    <div class="col-sm-6 col-md-4 col-centered">
      <p id="errorMsg" class="error small" ng-show="error_message != ''">{{message_box}}</p>
      <form name="signinForm" role="form" class="ng-pristine ng-valid-email ng-invalid ng-invalid-required" novalidate>
        <div class="form-group">
          <input type="text" placeholder="First Name *" class="form-control" ng-model="sign_up_form.first_name" name="first_name" required="required" />
        </div>
        <div class="form-group">
          <input type="text" placeholder="Last Name *" class="form-control" ng-model="sign_up_form.last_name" name="last_name" required="required" />
        </div>
        <div class="form-group">
          <input type="text" placeholder="Email *" class="form-control" ng-model="sign_up_form.email" name="email" required="required" />
        </div>
        <div class="form-group">
          <input type="password" placeholder="Password *" class="form-control" ng-model="sign_up_form.password" name="password" required="required" />
        </div>
        <div class="form-group">
          <input type="password" placeholder="Password Confirmation *" class="form-control" ng-model="sign_up_form.password_confirmation" name="password_confirmation" required="required" />
        </div>
        <div class="form-group">
          <button type="submit" ng-click="submit_sign_up_details(sign_up_form);" class="btn btn-default btn-block submitbtn">Sign Up</button>
        </div>
      </form>
      <%= render "partials/social_sign_footer" %>
    </div>
  </div>
</section>
<p id="notice"><%= notice %></p>

<h1>Listing Annotation Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annotation_categories.each do |annotation_category| %>
      <tr>
        <td><%= annotation_category.name %></td>
        <td><%= annotation_category.status %></td>
        <td><%= link_to 'Show', annotation_category %></td>
        <td><%= link_to 'Edit', edit_annotation_category_path(annotation_category) %></td>
        <td><%= link_to 'Destroy', annotation_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<section id="adminWrapper" ng-controller="YomuLabsAdminCtrl" ng-init="fetch_article_data_at_step1(<%=@article_id %>);" >
  <section id="createarticle_step1" class="steps_top_padding">
    <div class="col-md-7 col-centered">

      <!-- Steps - Start -->
      <%= render "admin/article_process_steps" %>
      <!-- Steps - End -->

      <form>
        <div class="clearfix">
          <div class="form-group col-md-12">
            <input type="text" placeholder="Enter your title *" class="form-control" ng-model="article.title" name="title" required="required" />
            <input type="text" placeholder="" class="form-control" ng-model="article.id" name="id"/>

          </div>
        </div>
        <div class="clearfix">
          <div class="form-group col-md-4">
            <input type="text" placeholder="Enter Source Name" class="form-control" ng-model="article.source_name" name="source_name" />
          </div>
          <div class="form-group col-md-4">
            <input type="text" placeholder="Enter Source URL" class="form-control" ng-model="article.source_url" name="source_url" />
          </div>
          <div class="form-group col-md-4">
            <input type="text" placeholder="Enter Level" class="form-control" ng-model="article.level" name="level"/>
          </div>
        </div>
        <div class="clearfix">
          <div class="form-group col-md-12">
            <textarea placeholder="Enter Text *" class="form-control" ng-model="article.body" name="body"></textarea>
          </div>
        </div>
        <div class="text-right clearfix">
          <div class="form-group col-md-12">
            <button type="submit" class="btn btn-primary stepButton" ng-click="submit_article_step_1(article);" >Next &gt;&gt;</button>
          </div>
        </div>
      </form>
      
    </div>
  </section>
</section>